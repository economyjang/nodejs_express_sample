{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "ES2017"
    ],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "allowJs": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "app.ts",
    "./src/**/*.ts",
    "./types/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
